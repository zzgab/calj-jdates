{
  "name": "@calj-net/jdates",
  "version": "1.0.0-alpha1",
  "description": "The Jewish Dates library from https://CalJ.net",
  "homepage": "https://gitlab.plenitech.com/calj/ts-jdates",
  "main": "lib/index.js",
  "scripts": {
    "build": "npm run clean && npm run build:lib && npm run build:browser",
    "build:lib": "tsc",
    "build:browser": "rollup -c && cp public/index.html dist/cdn/",
    "clean": "rm -rf dist",
    "deploy:netlify": "netlify deploy --site $NETLIFY_SITE_ID --dir dist/cdn/",
    "deploy:netlify:prod": "netlify deploy --prod --site $NETLIFY_SITE_ID --dir dist/cdn/",
    "prettier": "prettier -w **/*.ts *.js */**/*.ts",
    "test": "jest"
  },
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jest": "^29.4.0",
    "jest": "^29.4.3",
    "prettier": "^2.8.4",
    "rollup": "^3.15.0",
    "rollup-plugin-iife-namespace": "^0.0.2",
    "ts-jest": "^29.0.5",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  },
  "keywords": ["Jewish", "Calendar", "Hebrew", "Dates", "Parasha"],
  "author": "Gabriel Zerbib <gabriel@calj.net>",
  "license": "ISC"
}
